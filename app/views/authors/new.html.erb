<% if params[:action] == "new" || params[:action] == "create" %>
  <h1 class="text-center">New Author</h1>
<% else %>
  <h1 class="text-center">Edit Author</h1>
<% end %>

<% if @author.errors.any? %>
  <h2>Errors:<%=  %></h2>
  <ul>
    <% @post.errors.full_messages.each do |m| %>
      <li><%= m %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @author, html: {class: "form-horizontal"} do |f| %>
  <div class="row">
    <%= f.label :name, class: "col-xs-2 col-xs-offset-1" %>
    <%= f.text_field :name, class: "col-xs-2" %>
  </div>
  <div class="row">
  <%= f.label :bio, class: "col-xs-2 col-xs-offset-1" %>
  <%= f.text_area :bio, class: "col-xs-8", size:"3x15" %>
  </div>
  <div class="row">
  <%= f.submit "Save", class: "center-block" %>
  </div>
<% end %>
